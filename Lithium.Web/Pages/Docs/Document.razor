                                    var isActive = doc.Slug == Slug;
                                    var className = $"{(isActive ? "bg-lithium-100 text-white! font-medium" : "text-lithium-400! hover:text-white! hover:bg-lithium-50/50")} group flex items-center gap-3 px-3 py-2 text-sm rounded-md transition-all duration-200";

                                    <NavLink href="@("/docs/" + doc.Slug)" @onclick="CloseSidebars"
                                             class="@className">
                                        <span
                                            class="@(isActive ? "opacity-100" : "opacity-50 group-hover:opacity-100") transition-opacity">@doc.Icon</span>
                                        <span>@doc.Title</span>
                                    </NavLink>
                                }
                            </div>
                        </div>
                    }
                </nav>
            </div>
        </aside>
    }

    <!-- Main Content Area -->
