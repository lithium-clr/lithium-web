                                    <span>Preview</span>
                                    <span class="text-[10px] text-lithium-600 font-mono">HTML</span>
                                </div>
                                <div class="flex-1 overflow-y-auto p-8 prose prose-invert max-w-none">
                                    @((MarkupString)_htmlContent)
                                </div>
                            </div>
                        </div>
                    </EditForm>
                }
                else
