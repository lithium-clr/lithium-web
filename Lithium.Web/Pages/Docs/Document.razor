                                <ul class="space-y-1">
                                    @foreach (var heading in _headings)
                                    {
                                        var slugUri = $"/docs/{Slug}/#{heading.Slug}";

                                        <li>
                                            <a href="@slugUri"
                                               class="toc-link block py-1.5 text-sm text-lithium-500! hover:text-white! transition-colors border-l-2 border-transparent pl-4 -ml-px truncate"
                                               data-target="@heading.Slug"
                                               style="padding-left: @(heading.Level == 1 ? "1rem" : $"{heading.Level * 0.5 + 0.5}rem")">
                                                @heading.Text
                                            </a>
                                        </li>
                                    }
                                </ul>

                                <!-- Quick Links -->
                                <div class="pt-6 mt-6 border-t border-lithium-100/50">
                                    <h4 class="mb-4 text-xs font-bold text-white! uppercase tracking-wider">
                                        Community</h4>
                                    <ul class="space-y-3 text-sm">
                                        <li>
                                            <a href="#"
                                               class="flex items-center gap-2 text-lithium-400! hover:text-white! transition-colors group">
                                                <div
                                                    class="p-1 rounded-md bg-lithium-50/50 group-hover:bg-lithium-50 transition-colors">
                                                    <GithubIcon Size="14"/>
                                                </div>
                                                <span>Edit on GitHub</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#"
                                               class="flex items-center gap-2 text-lithium-400! hover:text-white! transition-colors group">
                                                <div
                                                    class="p-1 rounded-md bg-lithium-50/50 group-hover:bg-lithium-50 transition-colors">
                                                    <MessageCircleIcon Size="14"/>
                                                </div>
