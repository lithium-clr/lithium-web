@page "/not-found"
@layout MainLayout

<PageTitle>Not Found - Lithium</PageTitle>

<HeadContent>
    <meta name="robots" content="noindex, nofollow"/>
</HeadContent>

<div class="flex flex-col items-center justify-center h-full text-center">
    <h3 class="text-4xl font-bold text-white mb-4">404 - Not Found</h3>
    <p class="text-lithium-500 mb-8">Sorry, the content you are looking for does not exist.</p>
    <a href="/" class="px-6 py-2 bg-lithium-100 hover:bg-lithium-200 text-white rounded-md transition-colors">
        Go Home
    </a>
</div>

@code {

    [CascadingParameter] private HttpContext? HttpContext { get; set; }

    protected override void OnInitialized()
    {
        HttpContext?.Response.StatusCode = 404;
    }

}