        <!-- Background Gradients (Matches Landing Page Theme) -->
        <div class="absolute inset-0 opacity-30">
            <div
                class="absolute top-[-10%] left-[-10%] w-[500px] h-[500px] bg-blue-600/20 rounded-full blur-[100px]"></div>
            <div
                class="absolute bottom-[-10%] right-[-10%] w-[500px] h-[500px] bg-purple-600/20 rounded-full blur-[100px]"></div>
            <div
                class="absolute top-[20%] right-[20%] w-[300px] h-[300px] bg-pink-600/10 rounded-full blur-[80px]"></div>
        </div>

        <!-- Grid Pattern -->
