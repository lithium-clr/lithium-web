@using Lithium.Web.Components.Pages
@using Microsoft.Extensions.Localization

<nav class="fixed top-0 left-0 right-0 z-50 bg-lithium-0/80 backdrop-blur-md border-b border-lithium-100"
     aria-label="Main Navigation">
    <div class="max-w-7xl mx-auto px-6 h-16 flex items-center justify-between">
        <div class="flex items-center gap-8">
            <a href="/" class="text-xl font-bold text-lithium-900! hover:text-white! transition-colors"
               aria-label="Lithium Home">Lithium</a>
            <div class="hidden md:flex items-center gap-6">
                <a href="/docs"
                   class="text-lithium-600! hover:text-white! transition-colors text-sm font-medium">@Localizer["Documentation"]</a>
                <a href="https://status.lithium.run/"
                   class="text-lithium-600! hover:text-white! transition-colors text-sm font-medium">@Localizer["Status"]</a>
                @* <a href="/roadmap" *@
                @*    class="text-lithium-600! hover:text-white! transition-colors text-sm font-medium">@Localizer["Roadmap"]</a> *@
            </div>
        </div>
        <div class="flex items-center gap-4">
            <a href="https://github.com/lithium-clr" target="_blank" rel="noopener noreferrer"
               class="text-lithium-600! hover:text-white! transition-colors" aria-label="GitHub">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path fill-rule="evenodd"
